@page "/blokowe"
@inject IJSRuntime JS

<PageTitle>Szyfrowanie Blokowe</PageTitle>

<div class="container d-flex flex-column">
    <h4 class="text-center">Szyfrowanie AES</h4>

    <div class="mb-3">
        <label for="inputText">Tekst do zaszyfrowania:</label>
        <input type="text" id="inputText" @bind="InputText" />
    </div>

    <div class="mb-3">
        <label for="encryptionKey">Klucz szyfrowania:</label>
        <input type="text" id="encryptionKey" @bind="EncryptionKey" />
    </div>

    <div class="mb-3">
        <InputFile OnChange="LoadFile" />
    </div>

    <button @onclick="EncryptText">Zaszyfruj tekst</button>

    @if (!string.IsNullOrEmpty(EncryptedText))
    {
        <div class="mt-3">
            <h5>Zaszyfrowany tekst:</h5>
            <textarea class="form-control" readonly>@EncryptedText</textarea>
        </div>
    }

    @if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="alert alert-danger">@ErrorMessage</div>
    }
</div>
